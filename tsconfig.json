{
    "compilerOptions": {
        "experimentalDecorators": true,
        "newLine": "LF",
        "preserveConstEnums": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "pretty": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dst",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
        ]
}